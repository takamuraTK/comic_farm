<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="/">ComicFarm</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><%= link_to fa_icon("book", text: "漫画を探す"), books_path, class: 'nav-link' %></li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" id="navbarDropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-star"></i> ランキング
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to '登録数ランキング', '/subscribe-ranking', class: 'dropdown-item' %>
            <%= link_to '高評価ランキング', '/review-ranking', class: 'dropdown-item' %>
          </div>
        </li>
        <li class="nav-item"><%= link_to fa_icon("search", text: "新刊検索"), newlys_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to fa_icon("bell", text: "買うかもしれない新刊"), favnews_path, class: 'nav-link' %></li>
        <% if user_signed_in? %>
          <% if current_user.admin == true %>
            <li class="nav-item"><%= link_to fa_icon("download", text: "新刊ダウンロード"), newlys_download_path, class: 'nav-link' %></li>
          <% end %>
        <% end %>
        <li class="nav-item"><%= link_to fa_icon("question-circle", text: "使い方"), '/howto', class: 'nav-link' %></li>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to fa_icon("user", text: current_user.name), user_path(current_user), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to fa_icon("sign-out", text: "ログアウト"), destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
        </ul>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to fa_icon("user-plus", text: "登録する"), new_user_registration_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to fa_icon("sign-in", text: "ログイン"), new_user_session_path, class: 'nav-link' %></li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>