<% if current_user.checkreviewfav?(review) %>
  <%= form_with(model: current_user.reviewfavorites.find_by(review_id: review.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit 'いいね解除', class: 'btn btn-sm btn-light border active' %>
    <span class="border bg-light rounded pr-2 pl-2 pt-0.8 pb-1 mr-2">
        <%= review.reviewfavorites.count %>
    </span>
  <% end %>
<% else %>
  <%= form_with(model: current_user.reviewfavorites.build, local: true) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit 'いいね', class: 'btn btn-sm btn-light border' %>
    <span class="border bg-light rounded pr-2 pl-2 pt-0.8 pb-1 mr-2">
        <%= review.reviewfavorites.count %>
    </span>
  <% end %>
<% end %>