<% if books.present? %>
  <%= books.count %>件
  <ul class="list-group mb-2" >
  <li class="list-group-item row list-group-item-success" style="width:max">
    <div class="row">
        <div class="col-lg-6">タイトル</div>
        <div class="col-lg-2">作者名</div>
        <div class="col-lg-2">発売日</div>
        <div class="col-lg-2">リンク</div>
      </div>
  </li>
  <% books.each do |book| %>
    <li class="list-group-item row" style="width:max">
      <div class="row">
        <div class="col-lg-6"><%= link_to book.title, book_path(book.isbn), class: 'text-decoration-none text-body' %></div>
        <div class="col-lg-2"><%= book.author %></div>
        <div class="col-lg-2"><%= book.salesDate %></div>
        <div class="col-lg-2">
          <a href="<%= book.url %>" class="card-link btn-sm btn-dark" target="_blank">楽天</a>
          <% amazonurl = "http://www.amazon.co.jp/dp/#{change_isbn(book.isbn)}" %>
          <a href="<%= amazonurl %>" class="card-link btn-sm btn-dark ml-1" target="_blank">Amazon</a>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
<% end %>